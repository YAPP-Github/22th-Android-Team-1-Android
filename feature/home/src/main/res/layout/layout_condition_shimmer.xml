<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtTitle"
        style="@style/Text.Subtitle01"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:background="@color/bg30"
        app:layout_constraintBottom_toTopOf="@id/layoutProducts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitle">

        <include layout="@layout/layout_product_shimmer" />

        <include layout="@layout/layout_product_shimmer" />

        <include layout="@layout/layout_product_shimmer" />

    </LinearLayout>

    <TextView
        style="@style/Text.Body02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/bg_non_ripple_radius_10dp"
        android:backgroundTint="@color/bg30"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/layoutProducts" />

</androidx.constraintlayout.widget.ConstraintLayout>