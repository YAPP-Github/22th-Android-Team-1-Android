<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="8dp">

    <View
        android:id="@+id/imgProduct"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_non_ripple_radius_10dp"
        android:backgroundTint="@color/bg30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtProductName1"
        style="@style/Text.Body02"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/bg30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgProduct" />

    <TextView
        android:id="@+id/txtProductName2"
        style="@style/Text.Body02"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/bg30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtProductName1" />

    <TextView
        android:id="@+id/txtProductPrice"
        style="@style/Text.Caption1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/bg30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtProductName2" />

    <TextView
        android:id="@+id/txtProductInfo"
        style="@style/Text.Subtitle01"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/bg30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtProductPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>